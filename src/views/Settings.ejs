      <section class="user-data">
        <fieldset class="user-form">
          <form class="data-area" action="/settings/update/<%= user._id %> " method="post"
            enctype="multipart/form-data">
            <div class="user-img">
              <label for="upload-img">Mudar Foto</label>
              <input id="upload-img" type="file" name="userImg" value="" accept="image/jpeg, image/png, image/jpg" /> 
              <img id="profileImg" style="height: 40vh" class="User-foto" src="/uploads/<%=user.userPhoto%>" alt="" />
            </div>
            <div class="area-input">
              <input id="nome" name="nome" required placeholder="Nome" type="text" value="<%= user.nome %>" />
              <input id="dep" name="email" required placeholder="Email" type="email" value="<%= user.email%>" />
              <button type="submit" class="btn">Salvar</button>
            </div>
          </form>
        </fieldset>
      </section>
    </main>
